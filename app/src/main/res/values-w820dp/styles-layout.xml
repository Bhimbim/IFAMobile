<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- INCLUDE -->

    <style name="include_header">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="include_navigation">
        <item name="android:layout_width">@dimen/navigation_slide_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="include_guide">
        <item name="android:layout_marginTop">@dimen/general_padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/general_padding_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_container">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

        <style name="form_login">
            <item name="android:layout_marginTop">@dimen/general_margin_small</item>
            <item name="android:layout_gravity">center_horizontal</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>


	<!-- HEADER -->

	<style name="header_toolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/header_toolbar_height</item>
		<item name="android:background">@color/theme_primary</item>
        <item name="android:gravity">center_vertical</item>
	</style>

	<style name="header_tabLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/header_tabLayout_height</item>
		<item name="android:textColor">@color/theme_quinary</item>
		<item name="android:background">@color/theme_quaternary</item>
		<item name="android:gravity">center</item>
	</style>


    <!-- GUIDE -->

    <style name="guide_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/icon_size_medium</item>
    </style>

        <style name="guide_line_container">
            <item name="android:layout_gravity">top</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/icon_size_tiny</item>
            <item name="android:weightSum">1000</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:orientation">horizontal</item>
        </style>

            <style name="guide_line_space">
                <item name="android:layout_width">0px</item>
                <item name="android:layout_weight">125</item>
                <item name="android:layout_height">match_parent</item>
            </style>

            <style name="guide_line">
                <item name="android:layout_width">0px</item>
                <item name="android:layout_weight">250</item>
                <item name="android:layout_height">@dimen/line_thin_height</item>
                <item name="android:background">@color/theme_quaternary</item>
            </style>

        <style name="guide_indicator_container">
            <item name="android:layout_gravity">top</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:weightSum">1000</item>
            <item name="android:orientation">horizontal</item>
        </style>

            <style name="indicator_item_container">
                <item name="android:layout_width">0px</item>
                <item name="android:layout_weight">250</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:gravity">top|center_horizontal</item>
                <item name="android:orientation">vertical</item>
            </style>

                <style name="indicator_icon">
                    <item name="android:layout_width">@dimen/icon_size_tiny</item>
                    <item name="android:layout_height">@dimen/icon_size_tiny</item>
                    <item name="android:textColor">@color/theme_quinary</item>
                    <item name="android:textSize">@dimen/text_size_medium</item>
                    <item name="android:background">@drawable/guide_icon_start</item>
                    <item name="android:gravity">center</item>
                </style>

                <style name="indicator_title">
                    <item name="android:layout_width">wrap_content</item>
                    <item name="android:layout_height">wrap_content</item>
                    <item name="android:padding">@dimen/general_padding_small</item>
                    <item name="android:textColor">@color/theme_quinary</item>
                    <item name="android:textSize">@dimen/text_size_tiny</item>
                    <item name="android:textAllCaps">false</item>
                </style>

    <!-- NAVIGATION -->

    <style name="navigation_container">
        <item name="android:layout_width">@dimen/navigation_slide_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/general_padding_large</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:background">@color/theme_secondary</item>
        <item name="android:orientation">vertical</item>
    </style>

        <style name="navigation_photo">
            <item name="android:layout_marginTop">@dimen/general_margin_small</item>
            <item name="android:layout_marginBottom">@dimen/general_margin_small</item>
            <item name="android:layout_width">@dimen/navigation_photo_size</item>
            <item name="android:layout_height">@dimen/navigation_photo_size</item>
            <item name="android:background">@color/theme_secondary</item>
        </style>

        <style name="navigation_content_container">
            <item name="android:layout_marginTop">@dimen/general_margin_small</item>
            <item name="android:layout_marginBottom">@dimen/general_margin_small</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:divider">@drawable/separator_navigation</item>
            <item name="android:showDividers">middle</item>
            <item name="android:orientation">vertical</item>
        </style>


	<!-- CONTENT -->

	<style name="content_viewPager">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/theme_primary</item>
	</style>

    <style name="content_scrollView_withPadding">
        <item name="android:paddingTop">@dimen/general_padding_medium</item>
        <item name="android:paddingRight">@dimen/general_padding_medium</item>
        <item name="android:paddingLeft">@dimen/general_padding_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="content_scrollView_withoutPadding">
        <item name="android:paddingRight">@dimen/general_padding_medium</item>
        <item name="android:paddingLeft">@dimen/general_padding_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="content_container_withoutPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="content_container_withPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/general_padding_medium</item>
        <item name="android:orientation">vertical</item>
    </style>


	<!-- PAPER -->

    <style name="paper_container">
        <item name="android:layout_marginBottom">@dimen/general_margin_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/theme_quaternary</item>
    </style>

		<style name="paper_header">
			<item name="android:layout_width">match_parent</item>
			<item name="android:layout_height">@dimen/input_singleLine_height</item>
			<item name="android:paddingRight">@dimen/general_padding_medium</item>
			<item name="android:orientation">horizontal</item>
		</style>

            <style name="paper_horn">
                <item name="android:layout_alignParentLeft">true</item>
                <item name="android:layout_marginRight">12dp</item>
                <item name="android:layout_width">@dimen/paper_horn_width</item>
                <item name="android:layout_height">match_parent</item>
                <item name="android:background">@color/theme_secondary</item>
            </style>

        <style name="form_vertical_container">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingTop">@dimen/general_padding_medium</item>
            <item name="android:paddingLeft">@dimen/general_padding_large</item>
            <item name="android:paddingRight">@dimen/general_padding_medium</item>
            <item name="android:paddingBottom">@dimen/general_padding_medium</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="form_horizontal_container">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:paddingTop">@dimen/general_padding_medium</item>
            <item name="android:paddingLeft">@dimen/general_padding_large</item>
            <item name="android:paddingRight">@dimen/general_padding_medium</item>
            <item name="android:paddingBottom">@dimen/general_padding_medium</item>
            <item name="android:orientation">horizontal</item>
        </style>


    <!-- PROGRESS & ALERT -->

    <style name="alert_container">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/theme_quaternary</item>
        <item name="android:orientation">vertical</item>
    </style>

        <style name="dialog_content_container">
            <item name="android:layout_marginLeft">@dimen/general_margin_small</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>

    <style name="progress_container">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/general_margin_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/general_padding_large</item>
        <item name="android:paddingLeft">@dimen/general_padding_medium</item>
        <item name="android:paddingRight">@dimen/general_padding_medium</item>
        <item name="android:paddingBottom">@dimen/general_padding_large</item>
        <item name="android:background">@drawable/background_progress</item>
    </style>

    <!-- LIST -->

    <style name="list_container">
        <item name="android:layout_marginTop">@dimen/general_margin_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/general_transparent</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="order_container">
        <item name="android:layout_margin">@dimen/line_thin_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/general_padding_medium</item>
        <item name="android:background">@color/theme_quaternary</item>
    </style>

        <style name="order_content_container">
            <item name="android:layout_marginLeft">@dimen/general_margin_small</item>
            <item name="android:layout_centerVertical">true</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
            <item name="android:gravity">left</item>
        </style>

</resources>