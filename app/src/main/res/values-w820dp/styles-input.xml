<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="input_cotation_container">
        <item name="android:layout_marginTop">@dimen/general_margin_small</item>
        <item name="android:layout_marginRight">@dimen/general_margin_large</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">100</item>
    </style>

    <!-- SINGLELINE -->
    
    	<!-- EDIT TEXT -->
    
	    <style name="editText_singleLine_plain">
	        <item name="android:layout_width">match_parent</item>
	        <item name="android:layout_height">@dimen/input_singleLine_height</item>
            <item name="android:paddingLeft">@dimen/general_padding_medium</item>
            <item name="android:paddingRight">@dimen/general_padding_medium</item>
	        <item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:textColor">@color/theme_quinary</item>
            <item name="android:textColorHint">@color/theme_primary</item>
            <item name="android:textCursorDrawable">@null</item>
	        <item name="android:singleLine">true</item>
	        <item name="android:ellipsize">end</item>
	        <item name="android:gravity">left|center_vertical</item>
            <item name="android:background">@drawable/input_general</item>
	    </style>
	    
	    <style name="editText_singleLine_rightIcon">
			<item name="android:layout_width">match_parent</item>
			<item name="android:layout_height">@dimen/input_singleLine_height</item>
			<item name="android:paddingLeft">@dimen/general_padding_medium</item>
			<item name="android:paddingRight">@dimen/general_padding_medium</item>
			<item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:textColor">@color/theme_quinary</item>
            <item name="android:textColorHint">@color/theme_primary</item>
            <item name="android:textCursorDrawable">@null</item>
			<item name="android:singleLine">true</item>
			<item name="android:ellipsize">end</item>
			<item name="android:gravity">left|center_vertical</item>
	        <item name="android:drawablePadding">@dimen/general_padding_small</item>
            <item name="android:background">@drawable/input_general</item>
	    </style>
	    
	    <style name="editText_singleLine_cotation">
			<item name="android:layout_width">0px</item>
			<item name="android:layout_height">@dimen/input_singleLine_height</item>
            <item name="android:layout_weight">50</item>
            <item name="android:paddingLeft">@dimen/general_padding_medium</item>
            <item name="android:paddingRight">@dimen/general_padding_medium</item>
			<item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:textColor">@color/theme_quinary</item>
            <item name="android:textColorHint">@color/theme_primary</item>
            <item name="android:textCursorDrawable">@null</item>
			<item name="android:singleLine">true</item>
			<item name="android:ellipsize">end</item>
			<item name="android:gravity">right|center_vertical</item>
            <item name="android:background">@drawable/input_general</item>
	    </style>

        <!-- SPINNER -->

        <style name="spinner_singleLine">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/input_singleLine_height</item>
            <item name="android:paddingLeft">@dimen/general_padding_medium</item>
            <item name="android:paddingRight">@dimen/general_padding_medium</item>
            <item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:singleLine">true</item>
            <item name="android:ellipsize">end</item>
            <item name="android:gravity">left|center_vertical</item>
        </style>

	    <!-- CHECKBOX -->
	    
	    <style name="checkbox_singleLine">
	        <item name="android:layout_width">wrap_content</item>
	        <item name="android:layout_height">@dimen/checkBox_size</item>
	        <item name="android:paddingLeft">@dimen/general_padding_medium</item>
	        <item name="android:textSize">@dimen/text_size_medium</item>
	        <item name="android:singleLine">true</item>
	        <item name="android:ellipsize">end</item>
	        <item name="android:gravity">left|center_vertical</item>
	    </style>

        <!-- SEEKBAR -->

    <style name="seekBar_container">
        <item name="android:padding">@dimen/general_padding_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

        <style name="seekBar_singleLine_min">
            <item name="android:layout_alignParentLeft">true</item>
            <item name="android:layout_centerVertical">true</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/theme_quinary</item>
            <item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:singleLine">true</item>
            <item name="android:ellipsize">end</item>
            <item name="android:gravity">left|center_vertical</item>
        </style>

        <style name="seekBar_singleLine">
            <item name="android:layout_centerVertical">true</item>
            <item name="android:layout_marginLeft">@dimen/general_padding_small</item>
            <item name="android:layout_marginRight">@dimen/general_padding_small</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:thumb">@drawable/seekbar_thumb_primary</item>
        </style>

        <style name="seekBar_singleLine_max">
            <item name="android:layout_alignParentRight">true</item>
            <item name="android:layout_centerVertical">true</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/theme_quinary</item>
            <item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:singleLine">true</item>
            <item name="android:ellipsize">end</item>
            <item name="android:gravity">right|center_vertical</item>
        </style>


    <!-- MULTILINE -->

        <!-- EDIT TEXT -->

        <style name="editText_multiLine_plain">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/input_multiLine_height</item>
            <item name="android:paddingLeft">@dimen/general_padding_medium</item>
            <item name="android:paddingRight">@dimen/general_padding_medium</item>
            <item name="android:textSize">@dimen/text_size_medium</item>
            <item name="android:textColor">@color/theme_quinary</item>
            <item name="android:textColorHint">@color/theme_primary</item>
            <item name="android:textCursorDrawable">@null</item>
            <item name="android:singleLine">false</item>
            <item name="android:ellipsize">end</item>
            <item name="android:gravity">left|center_vertical</item>
