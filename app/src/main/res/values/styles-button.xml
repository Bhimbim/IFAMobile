<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BUTTON CONTAINER -->

    <style name="button_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">120</item>
        <!--<item name="android:divider">@drawable/separator_button</item>-->
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- BUTTON BY DISPLAY -->

    <style name="button_navigation">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">@dimen/navigation_icon_size</item>
        <item name="android:layout_height">@dimen/navigation_icon_size</item>
        <!--<item name="android:src">@drawable/icon_navigation</item>-->
        <item name="android:background">@color/general_transparent</item>
    </style>

    <style name="button_expand">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/icon_size_tiny</item>
        <item name="android:layout_height">@dimen/icon_size_tiny</item>
        <!--<item name="android:src">@drawable/icon_expand</item>-->
        <item name="android:background">@color/general_transparent</item>
    </style>

    <style name="button_close_progress">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
        <!--<item name="android:src">@drawable/icon_close_secondary</item>-->
        <item name="android:background">@color/general_transparent</item>
    </style>

    <style name="button_close_alert">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
        <!--<item name="android:src">@drawable/icon_close_primary</item>-->
        <item name="android:background">@color/general_transparent</item>
    </style>


    <!-- BUTTON FORM -->

    <style name="button_primary_medium">
        <item name="android:layout_marginTop">@dimen/general_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/button_width_medium</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textColor">@color/theme_quaternary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:background">@drawable/button_primary</item>-->
    </style>

    <style name="button_primary_small">
        <item name="android:layout_marginTop">@dimen/general_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/button_height_medium</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textColor">@color/theme_quaternary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:background">@drawable/button_primary</item>-->
    </style>

    <style name="button_primary_large">
        <item name="android:layout_marginTop">@dimen/general_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textColor">@color/theme_quaternary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:background">@drawable/button_primary</item>-->
    </style>

    <style name="button_primary_wrapContent">
        <item name="android:layout_marginTop">@dimen/general_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textColor">@color/theme_quaternary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:background">@drawable/button_primary</item>-->
    </style>

    <style name="button_primary_weight">
        <item name="android:layout_marginTop">@dimen/general_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/general_margin_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textColor">@color/theme_quaternary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:background">@drawable/button_primary</item>-->
    </style>

</resources>