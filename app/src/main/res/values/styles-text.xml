<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- HEADER -->

	    <style name="header_title">
            <item name="android:layout_centerInParent">true</item>
	        <item name="android:layout_gravity">center</item>
	        <item name="android:layout_width">wrap_content</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:textSize">@dimen/text_size_huge</item>
	        <item name="android:textColor">@color/theme_quinary</item>
			<item name="android:textAllCaps">true</item>
	    </style>
	    
	    <style name="header_tab">
	        <item name="android:layout_gravity">center</item>
	        <item name="android:layout_width">wrap_content</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:textSize">@dimen/text_size_large</item>
	        <item name="android:textColor">@color/theme_quinary</item>
			<item name="android:textAllCaps">true</item>
	    </style>


	<!-- GUIDE -->

    <style name="guide_title">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_enormous</item>
        <item name="android:textColor">@color/theme_quinary</item>
        <item name="android:gravity">center</item>
    </style>


	<!-- PAPER -->

    <style name="paper_title">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/theme_quinary</item>
		<item name="android:textAllCaps">true</item>
    </style>

		<!-- LOGIN -->

		<style name="paper_login_title">
			<item name="android:layout_gravity">center_horizontal</item>
			<item name="android:layout_width">wrap_content</item>
			<item name="android:layout_height">wrap_content</item>
			<item name="android:textSize">@dimen/text_size_enormous</item>
			<item name="android:textColor">@color/theme_quinary</item>
			<item name="android:textAllCaps">true</item>
		</style>


	<!-- NAVIGATION -->



	<style name="navigation_name">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/general_padding_small</item>
		<item name="android:textSize">@dimen/text_size_huge</item>
		<item name="android:textColor">@color/theme_quinary</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>

	<style name="navigation_position">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">@dimen/general_padding_small</item>
		<item name="android:textSize">@dimen/text_size_large</item>
		<item name="android:textColor">@color/theme_quinary</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>

	<style name="navigation_title">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingTop">@dimen/general_padding_small</item>
	    <item name="android:paddingBottom">@dimen/general_padding_small</item>
	    <item name="android:textSize">@dimen/text_size_large</item>
	    <item name="android:textColor">@color/theme_quinary</item>
	    <item name="android:gravity">left|center_vertical</item>
		<item name="android:textAllCaps">true</item>
	</style>

	
	<!-- FIELD -->
	
	<style name="field_singleLine">
	    <item name="android:layout_gravity">left|center_vertical</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/input_singleLine_height</item>
	    <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
	    <item name="android:gravity">left|center_vertical</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="field_multiLine">
	    <item name="android:layout_gravity">left|center_vertical</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/input_multiLine_height</item>
	    <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
	    <item name="android:gravity">left|center_vertical</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="field_cotation">
		<item name="android:layout_gravity">left|center_vertical</item>
		<item name="android:layout_width">0px</item>
		<item name="android:layout_height">@dimen/input_singleLine_height</item>
        <item name="android:layout_weight">50</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="field_package">
		<item name="android:layout_gravity">left|center_vertical</item>
		<item name="android:layout_marginRight">@dimen/general_padding_small</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textColor">@color/theme_quinary</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:drawablePadding">@dimen/general_padding_small</item>
	</style>


    <!-- ALERT & PROGRESS -->

    <style name="dialog_title">
        <item name="android:layout_marginBottom">@dimen/general_padding_small</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/theme_quinary</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dialog_content">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/theme_quinary</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>


	<!-- LIST VIEW  -->

	<style name="list_header">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
	</style>

	<style name="list_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
	</style>

	<style name="list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
        <item name="android:drawablePadding">@dimen/general_padding_small</item>
	</style>

    <style name="list_weight_order">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
        <item name="android:drawablePadding">@dimen/general_padding_small</item>
        <!--<item name="android:drawableLeft">@drawable/icon_weight</item>-->
        <item name="android:background">@color/general_transparent</item>
    </style>

    <style name="list_packageType_order">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/theme_quinary</item>
        <!--<item name="android:src">@drawable/icon_package_small</item>-->
    </style>

	<style name="list_state_history">
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/general_padding_medium</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textColor">@color/theme_quinary</item>
		<!--<item name="android:background">@drawable/background_state</item>-->
		<item name="android:textAllCaps">true</item>
	</style>

</resources>