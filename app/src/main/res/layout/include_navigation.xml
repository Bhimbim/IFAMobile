<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/navigation_scrollView"
    android:fillViewport="true">

    <LinearLayout
        style="@style/general_vertical_matchWrap"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewPhoto"
            style="@style/navigation_photo"
            android:src="@drawable/icon_courier_dummy"/>

        <TextView
            android:id="@+id/textViewName"
            style="@style/navigation_name"
            android:text="@string/profile_name_default"/>

        <TextView
            android:id="@+id/textViewPosition"
            style="@style/navigation_position"
            android:text="@string/profile_position_default"/>

        <LinearLayout
            style="@style/navigation_content_container"
            android:gravity="left">

            <TextView
                android:id="@+id/textViewProfile"
                style="@style/navigation_title"
                android:text="@string/title_profile"/>

            <TextView
                android:id="@+id/textViewMessages"
                style="@style/navigation_title"
                android:text="@string/title_messages"/>

            <TextView
                android:id="@+id/textViewChangePassword"
                style="@style/navigation_title"
                android:text="@string/title_changePassword"/>

            <TextView
                android:id="@+id/textViewOptions"
                style="@style/navigation_title"
                android:text="@string/title_options"/>

            <TextView
                android:id="@+id/textViewLogout"
                style="@style/navigation_title"
                android:text="@string/button_logout"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>