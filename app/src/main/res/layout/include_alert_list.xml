<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/alert_container"
    android:padding="@dimen/general_padding_large"
    android:gravity="center"
    android:background="@color/general_transparent">

    <ImageView
        style="@style/icon_warning"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="@dimen/general_margin_medium"/>

    <TextView
        android:id="@+id/textViewTitle"
        style="@style/dialog_title"
        android:text="@string/alert_list_orderTitle"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewContent"
        style="@style/dialog_content"
        android:text="@string/alert_list_orderContent"
        android:layout_gravity="center"/>

</LinearLayout>