<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/general_relative_matchWrap"
    android:background="@color/general_transparent"
    tools:context=".activity.Home">

    <LinearLayout
        style="@style/alert_container">

        <RelativeLayout
            style="@style/paper_header">

            <View
                android:id="@+id/viewHorn"
                style="@style/paper_horn"/>

            <TextView
                android:id="@+id/textViewPaperTitle"
                android:layout_toRightOf="@id/viewHorn"
                style="@style/paper_title"/>

            <ImageButton
                android:id="@+id/buttonClose"
                style="@style/button_close_alert"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/form_horizontal_container">

            <ImageView
                style="@style/icon_warning"/>

            <LinearLayout
                style="@style/dialog_content_container">

                <TextView
                    android:id="@+id/textViewTitle"
                    style="@style/dialog_title"/>

                <TextView
                    android:id="@+id/textViewContent"
                    style="@style/dialog_content"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonPickLocation"
            style="@style/button_primary_medium"
            android:text="@string/button_pickLocation"/>

    </LinearLayout>

</RelativeLayout>