<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content_scrollView_withPadding"
    tools:context=".activity.Home">

    <LinearLayout
        style="@style/general_vertical_matchWrap">

        <LinearLayout
            android:id="@+id/linearLayoutSender"
            style="@style/paper_container">

            <RelativeLayout
                style="@style/paper_header">

                <View
                    android:id="@+id/viewHorn"
                    style="@style/paper_horn"/>

                <TextView
                    android:id="@+id/textViewSenderPaperTitle"
                    style="@style/paper_title"
                    android:layout_toRightOf="@id/viewHorn"
                    android:text="@string/paper_sender_details"/>

                <ImageButton
                    android:id="@+id/imageButtonSenderExpand"
                    style="@style/button_expand"/>

            </RelativeLayout>

            <LinearLayout
                style="@style/form_vertical_container">

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/field_singleLine"
                    android:text="@string/field_name"/>

                <EditText
                    android:id="@+id/editTextName"
                    style="@style/editText_singleLine_plain"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/textViewProvince"
                    style="@style/field_singleLine"
                    android:text="@string/field_province"/>

                <EditText
                    android:id="@+id/editTextProvince"
                    style="@style/editText_singleLine_plain"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/textViewCity"
                    style="@style/field_singleLine"
                    android:text="@string/field_city"/>

                <EditText
                    android:id="@+id/editTextCity"
                    style="@style/editText_singleLine_plain"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/textViewAddress"
                    style="@style/field_singleLine"
                    android:text="@string/field_address"/>

                <EditText
                    android:id="@+id/editTextAddress"
                    style="@style/editText_multiLine_plain"
                    android:enabled="false"/>

                <include
                    style="@style/general_relative_matchWrap"
                    layout="@layout/include_control_map"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPackage"
            style="@style/paper_container">

            <RelativeLayout
                style="@style/paper_header">

                <View
                    android:id="@+id/viewPackageHorn"
                    style="@style/paper_horn"/>

                <TextView
                    android:id="@+id/textViewPackagePaperTitle"
                    style="@style/paper_title"
                    android:layout_toRightOf="@id/viewPackageHorn"
                    android:text="@string/paper_package_details"/>

                <ImageButton
                    android:id="@+id/imageButtonPackageExpand"
                    style="@style/button_expand"/>

            </RelativeLayout>

            <LinearLayout
                style="@style/general_horizontal_matchWrap">

                <ImageView
                    android:id="@+id/imageViewPackageType"
                    style="@style/icon_packageType"/>

                <LinearLayout
                    style="@style/form_vertical_container">

                    <TextView
                        android:id="@+id/textViewDescription"
                        style="@style/field_singleLine"
                        android:text="@string/field_name"/>

                    <EditText
                        android:id="@+id/editTextDescription"
                        style="@style/editText_singleLine_plain"
                        android:enabled="false"/>

                    <LinearLayout
                        style="@style/general_horizontal_wrapContent">

                        <TextView
                            android:id="@+id/textViewLong"
                            style="@style/field_package"
                            android:drawableLeft="@drawable/icon_long"/>

                        <TextView
                            android:id="@+id/textViewWidth"
                            style="@style/field_package"
                            android:drawableLeft="@drawable/icon_width"/>

                        <TextView
                            android:id="@+id/textViewTall"
                            style="@style/field_package"
                            android:drawableLeft="@drawable/icon_tall"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewWeight"
                        style="@style/field_package"
                        android:drawableLeft="@drawable/icon_weight"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonTakeOrder"
            style="@style/button_primary_medium"
            android:text="@string/button_takeOrder"/>

    </LinearLayout>

</ScrollView>